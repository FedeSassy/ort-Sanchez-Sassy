
@{
    ViewBag.Title = "AddClient";
}

<h2>Fill the following fields to add a new client</h2>

@using (Html.BeginForm("AddClientForm", "Client"))
{
    <div class="container">
        <form>
            <div class="form-group">
                <label for="fullname">Fullname:</label>
                <input type="text" class="form-control" id="name" placeholder="Enter fullname" name="name">
            </div>
            <div class="form-group">
                <label for="p_id">ID:</label>
                <input type="text" class="form-control" id="personal_id" placeholder="Enter ID" name="personal_id">
            </div>
            <div class="form-group">
                <label for="phone_number">Phone number:</label>
                <input type="text" class="form-control" id="telephone" placeholder="Enter phone number" name="telephone">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" class="form-control" id="address" placeholder="Enter an address" name="address">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
}
<br />
<button id="autopartEdit" type="button" class="btn btn-default btn-sm">
    @Html.ActionLink("Return", "ClientMenu", "Client")
</button>