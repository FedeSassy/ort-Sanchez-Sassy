
@{
                /**/

                ViewBag.Title = "OrderForm";
}

<h2>OrderForm</h2>

@using (Html.BeginForm("OrderAdd", "Order"))
{
    <div class="container">
        <form>
            <div class="form-group">
                <label for="clientPersonalID">Client personal ID:</label>
                <input type="text" class="form-control" id="clientPersonalID" placeholder="Enter personal ID" name="clientPersonalID">
            </div>
            <div class="form-group">
                <label for="brand">Brand:</label>
                <input type="text" class="form-control" id="brand" placeholder="Enter brand" name="brand">
            </div>
            <div class="form-group">
                <label for="model">Model:</label>
                <input type="text" class="form-control" id="model" placeholder="Enter model" name="model">
            </div>
            <div class="form-group">
                <label for="plateNumber">Plate number:</label>
                <input type="text" class="form-control" id="plateNumber" placeholder="Enter plateNumber" name="plateNumber">
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" class="form-control" id="description" placeholder="Enter description" name="description">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
}
<br />
<button type="button" class="btn btn-default btn-sm" style="margin-left: 15px;">
    @Html.ActionLink("Return", "Index", "Home")
</button>